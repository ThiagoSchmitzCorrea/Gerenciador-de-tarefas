<h1>Tarefas</h1>
<%= link_to 'Nova tarefa', new_task_path %>

<table>
    <thead>
        <tr>
            <th>Título</th>
            <th>Descrição</th>
            <th>Status</th>
            <th colspan="3"></th>
        </tr>
    </thead>

    <tbody>
        <% @tasks.each do |task| %>
            <tr>
                <td><%= task.title %></td>
                <td><%= task.description %></td>
                <td><%= task.status ? 'Completo' : 'Incompleto' %></td>
             </tr>    
                <td><%= link_to 'Ver tarefa', task %></td>
                <td><%= link_to 'Editar tarefa', edit_task_path(task) %></td>
                <td><%= button_to 'Deletar tarefa', task, method: :delete, form: { data: { turbo_confirm: 'Tem certeza?'} } %></td>
           
        <% end %>
    </tbody>
</table>