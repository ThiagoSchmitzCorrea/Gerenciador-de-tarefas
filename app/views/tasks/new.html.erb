<h1><%= action_name.capitalize %> tarefa</h1>

<%= form_with(model: @task, local: true) do |form| %>
    <% if @task.errors.any? %>
        <div id="error_explanation">
            <h2><%= pluralize(@task.errors.count, "error") %> impossÃ­vel salvar a tarefa:</h2>
        
            <ul>
                <% @task.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

    <div class="field">
        <%= form.label :title %>
        <%= form.text_field :title %>
    </div>

    <div class="field">
        <%= form.label :description %>
        <%= form.text_area :description %>
    </div>

    <div class="field">
        <%= form.label :status %>
        <%= form.check_box :status %>
    </div>

    <div class="actions">
        <%= form.submit %>
    </div>
<% end %>

